<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="bg-white py-2">
      <div class="row justify-content-between align-items-center px-5 m-0">
        <div class="column">
          <h2 class="m-0"><%= link_to "Mister Cocktail", cocktails_path %></h2> 
        </div>
        <div class="column">
          <%= link_to "Add a cocktail", new_cocktail_path(@cocktail),  class: 'btn btn-outline-primary'  %>
        </div>
      </div>
    </nav>

      <%= yield %>
    
    <%= javascript_pack_tag "application" %>    

  </body>
</html>
